package voicetrainer.ui {	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.text.TextField;		import voicetrainer.data.vo.InputData;	import voicetrainer.data.vo.NoteData;	import voicetrainer.utils.NoteHelper;		/**
	 *	Copyright 2008 Base 42 
	 *	@author Jankees van Woezik
	 *  date: Jan 22, 2008
	 */
	public class PitchTuner extends Sprite {				public var arrow_mc:MovieClip;			public var singThis_tf:TextField;			private var mReferenceNote:NoteData;		private var mInputData:InputData;		private var mNotehelper:NoteHelper;				public function PitchTuner() {		}				public function setNoteHelper(inNoteHelper:NoteHelper):void {			mNotehelper = inNoteHelper;		}				public function setReferenceNote(inNoteData:NoteData):void {			mReferenceNote = inNoteData;			var textForTextField:String = String("(" + mReferenceNote.note_note + " " + mReferenceNote.note_octave + ")");			singThis_tf.text = textForTextField;		}				public function setNote(inInput:InputData):void {			mInputData = inInput;			compareNote();		}				private function compareNote():void {			var diff:Number = mInputData.pitch - mReferenceNote.note_pitch;			var mNoteData:NoteData = mNotehelper.getNearestNoteByPitch(mInputData.pitch);						arrow_mc.y = -diff;							var textForTextField:String = String(mInputData.pitch + " hz (" + mNoteData.note_note + " " + mNoteData.note_octave + ")");			TextField(arrow_mc["text_tf"]).text = textForTextField;		}				override public function toString():String {			return "voicetrainer.ui.PitchTuner";		}	}}